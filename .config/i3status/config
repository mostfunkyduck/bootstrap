# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
        markup = "pango"
        output_format = "i3bar"
}

# order += "ipv6"
order += "read_file name"
order += "load"
order += "volume main"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
# order += "disk /"
order += "memory"
order += "tztime local"

read_file name {
  format = "%content\t\t\t"
  path = "/etc/hostname"
  align = "left"
}

volume main {
  format =  "Vol (%devicename): %volume"
  format_muted = "Vol (%devicename): muted (%volume)"
  device = "default"
}

wireless _first_ {
  format_up = "W: (%quality at %essid) %bitrate / %frequency"
  format_down = "W: down"
}

ethernet _first_ {
  format_up = "E: %ip (%speed)"
  format_down = "E: down"
}

battery all {
  format = "%status %percentage"
}

disk "/" {
  format = "%free"
}

memory {
  format = "%used/%total (%percentage_used)"
  threshold_degraded = "2G"
  format_degraded = "MEMORY < %available"
}

tztime local {
  format = "%time"
  format_time = "%Y-%m-%d %l:%M:%S"
  align = "left"
}

